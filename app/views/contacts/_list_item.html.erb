<li id="<%= dom_id(contact)%>" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
  <div>
    <%= link_to edit_contact_path(contact), remote: true, class: "text-dark" do %>
      <%= contact.name %>
    
      &lt;<%= contact.email %>&gt;
    <% end %>
  </div>

  <div>
    <%= link_to contact, method: :delete, class: "btn btn-sm btn-outline-secondary" do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</li>
